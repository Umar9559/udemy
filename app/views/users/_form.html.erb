


<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10">
      <%= render 'layouts/shared/errors', obj: @user%>

  <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>

        <div class="form-group row">
          <%= form.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :username ,class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.text_field :email, class: "form-control shadow rounded",rows: 10 %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
          <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-md-center">
          <%= form.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-outline-light btn-lg")%>

        </div>

  <% end %>

  </div>

  </div>
  <%= link_to '[Back]', articles_path ,class: "text-info text-center"%>

</div>