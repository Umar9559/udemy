<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10">
      <%= render 'layouts/shared/errors', obj: @article%>

  <%= form_with(model: article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>

        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title ,class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.text_area :description, class: "form-control shadow rounded",rows: 10 %>
          </div>
        </div>


        <div class="form-group row">
          <%= form.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= form.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
          </div>
        </div>

        <div class="form-group row justify-content-md-center">
          <%= form.submit class: "btn btn-outline-light btn-lg"%>
        </div>

  <% end %>

  </div>

  </div>
  <%= link_to '[Back]', articles_path ,class: "text-info text-center"%>

</div>
